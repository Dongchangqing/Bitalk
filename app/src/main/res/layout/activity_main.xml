<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">


    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_data_attention"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/img_attention_checked"
            android:gravity="center"
            android:textSize="10sp"
            android:text="关注"
            android:textColor="@color/color_f15779"/>


        <TextView
            android:id="@+id/tv_data_discover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/img_discover_unchecked"
            android:gravity="center"
            android:textSize="10sp"
            android:text="发现"
            android:textColor="@color/color_999999"/>

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_data_notification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableTop="@mipmap/img_notification_unchecked"
                android:gravity="center"
                android:textSize="10sp"
                android:text="通知"
                android:textColor="@color/color_999999"/>
            <TextView
                android:id="@+id/tv_tab_message_count"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:textSize="10sp"
                android:text="20"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_circle_red"
                android:gravity="center"
                android:visibility="gone"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_data_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/img_mine_unchecked"
            android:gravity="center"
            android:textSize="10sp"
            android:text="我的"
            android:textColor="@color/color_999999"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab"
        android:background="@null"/>
</RelativeLayout>
